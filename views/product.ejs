    <div class="container-fluid mt-5">
        <!-- Carousel -->
        <center><h2>Popular</h2></center>
        <div id="telephoneCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <% productData.filter(product => product.category === 'smartphones').forEach((product, index) => { %>
                    <li data-target="#telephoneCarousel" data-slide-to="<%= index %>" <% if (index === 0) { %>class="active"<% } %>></li>
                <% }); %>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <% productData.filter(product => product.category === 'smartphones').forEach((product, index) => { %>
                    <div class="item <% if (index === 0) { %>active<% } %>">
                        <img src="<%= product.thumbnail %>" alt="<%= product.title %>">
                        
                            <h3><%= product.title %></h3>
                            <p><%= product.description %></p>
                            <p>Price: $<%= product.price %></p>
                       
                    </div>
                <% }); %>
            </div>
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#telephoneCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#telephoneCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- End Carousel for Telephones -->
        
